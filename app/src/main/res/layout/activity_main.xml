<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3B40"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="0dp"
        android:layout_height="322dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#414349"
        android:paddingHorizontal="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F1F1F1"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etScreen"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/roundedbutton_screen"
        android:ems="10"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:textColor="#323338"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDisplay" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etScreen">

        <Button
            android:id="@+id/button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="7"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="8"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="9"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/roundedbuttonoperator"
            android:onClick="fazOperacao"
            android:text="รท"
            android:textColor="#eeffffff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="4"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginRight="7dp"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="5"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginRight="7dp"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="6"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/roundedbuttonoperator"
            android:onClick="fazOperacao"
            android:text="x"
            android:textColor="#eeffffff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="1"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button10"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="2"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button11"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="3"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button12"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@drawable/roundedbuttonoperator"
            android:onClick="fazOperacao"
            android:text="-"
            android:textColor="#eeffffff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button13"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginBottom="5dp"
            android:background="@drawable/roundedbutton"
            android:onClick="fazOperacao"
            android:text="DEL" />

        <Button
            android:id="@+id/button14"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/roundedbutton"
            android:onClick="pegaBotao"
            android:text="0"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button15"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="86dp"
            android:layout_height="55dp"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/roundedbuttonreset"
            android:onClick="fazOperacao"
            android:text="CE" />

        <Button
            android:id="@+id/button16"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/roundedbuttonoperator"
            android:onClick="fazOperacao"
            android:text="+"
            android:textColor="#eeffffff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button17"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:background="@drawable/roundedbuttonoperator"
            android:onClick="resultado"
            android:text="="
            android:textColor="#eeffffff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button18"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:background="@drawable/roundedbutton"
            android:onClick="fazBinario"
            android:text="B"
            android:textSize="17sp" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>